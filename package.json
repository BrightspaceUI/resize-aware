{
	"name": "d2l-resize-aware",
	"version": "1.2.1",
	"description": "A Polymer 3 compatible ResizeObserver polyfill and utility component",
	"main": "d2l-resize-aware.js",
	"scripts": {
		"serve:public": "FOR /F \"tokens=*\" %F IN ('hostname') DO polymer serve --hostname %F.desire2learn.d2l",
		"serve": "polymer serve",
		"lint": "eslint *.js && polymer lint --sources \"*.js\" \"internal/*.js\"",
		"test": "npm run lint && polymer test --skip-plugin sauce",
		"test:ci": "npm run lint && polymer test --skip-plugin local"
	},
	"author": "D2L Corporation",
	"license": "Apache-2.0",
	"dependencies": {
		"@polymer/polymer": "^3.0.0"
	},
	"devDependencies": {
		"@webcomponents/webcomponentsjs": "^2.2.1",
		"d2l-inputs": "BrightspaceUI/inputs#semver:^2",
		"polymer-cli": "^1.9.6",
		"eslint": "^4.15.0",
		"eslint-config-brightspace": "^0.4.0",
		"wct-browser-legacy": "^1.0.1"
	}
}
